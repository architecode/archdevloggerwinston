{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "typings",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dst",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": false,
    "target": "es2016",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "**/*.spec.ts"
  ]
}
